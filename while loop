--------------------------------------------------------------------------------------------

C

#include <stdio.h>
 
int main ()
{
   int x = 10;//宣告整數變數x為10

   /* while 循环执行 */
   while( x < 20 )
   {
      printf("x 的值： %d\n", x);
      x++;
   }
 
   return 0;
}
--------------------------------------------------------------------------------------------

C++
--------------------------------------------------------------------------------------------

Java

public class Test { public static void main ( String args [ ] ) { 
       int x = 10 ;//宣告整數變數x為10
       while ( x < 20 ) { System . out . print ( " value of x : " + x ) ; //若x的值小於20時持續執行，此程式將會印出十次並顯示x的值
          x ++; //每次x的值+1
          System . out . print ( " \n " )   //系統輸出換行符號\n
        
          
          ;
       } } }
